{
    "name": "montross50/laravel-database-monologger",
    "type": "library",
    "description": "Monolog package for laravel 5.6 to allow database logging.",
    "keywords": ["laravel", "laravel5", "log", "monolog", "mysql", "laravel56", "database"],
    "homepage": "https://github.com/montross50/laravel-database-monologger",
    "license": "MIT",
    "authors": [{
        "name": "Trent Schmidt",
        "email": "sch43228@gmail.com",
        "role": "Developer"
    }],
    "require": {
        "php": ">=7.1.3",
        "illuminate/support": "^5.0,<5.7"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0",
        "squizlabs/php_codesniffer": "^3.1",
        "orchestra/testbench": "~3.6",
        "illuminate/config": "^5.0,<5.7",
        "mockery/mockery": "0.9.*"
    },
    "autoload": {
        "psr-4": {
            "Montross50\\DatabaseLogger\\": "src/Logger"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Montross50\\DatabaseLogger\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "phpcbf --standard=psr2 src/"
    },
    
    "extra": {
        "laravel": {
            "providers": [
                "Montross50\\DatabaseLogger\\MonologDatabaseHandlerServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable"
}
